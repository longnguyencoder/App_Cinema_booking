<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_backroun"
    tools:context=".Activity.BookingActivity"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_color_backroud"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView3"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginTop="24dp"
                android:textSize="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Confirm Ticket Booking" />



            <TextView
                android:id="@+id/NewsMovie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choose Room"
                android:layout_marginTop="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="12dp"
                android:layout_marginEnd="16dp"
                android:textStyle="bold"
                android:textSize="24sp"
                android:textColor="#FF9800"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    tools:ignore="MissingConstraints">

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/rd_room1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Phòng 1"
                                android:textColor="@color/white"
                                android:textStyle="bold"/>

                            <RadioButton
                                android:id="@+id/rd_room2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Phòng 2"
                                android:textColor="@color/white"
                                android:textStyle="bold"/>

                            <RadioButton
                                android:id="@+id/rd_room3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Phòng 3"
                                android:textColor="@color/white"
                                android:textStyle="bold"/>

                            <RadioButton
                                android:id="@+id/rd_room4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Phòng 4"
                                android:textColor="@color/white"
                                android:textStyle="bold"/>

                            <RadioButton
                                android:id="@+id/rd_room5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Phòng 5"
                                android:textColor="@color/white"
                                android:textStyle="bold"/>

                            <RadioButton
                                android:id="@+id/rd_room6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Phòng 6"
                                android:textColor="@color/white"
                                android:textStyle="bold"/>

                        </LinearLayout>
                    </HorizontalScrollView>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choose time"
                android:textColor="#FF9800"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="12dp"
                android:layout_marginEnd="16dp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="-24dp">

            </TextView>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    tools:ignore="MissingConstraints">

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/rd_time900"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="9:00"
                                android:textColor="@color/white"
                                android:textStyle="bold"/>

                            <RadioButton
                                android:id="@+id/rd_time1100"
                                android:text="11:00"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                 />

                            <RadioButton
                                android:id="@+id/rd_time1300"
                                android:text="13:00"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                 />

                            <RadioButton

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/rd_time1500"
                                android:text="15:00"
                                android:textColor="@color/white"
                                android:textStyle="bold" />

                            <RadioButton

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/rd_time1700"
                                android:text="17:00"
                                android:textColor="@color/white"
                                android:textStyle="bold" />

                            <RadioButton

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/rd_time2000"
                                android:text="20:00"
                                android:textColor="@color/white"
                                android:textStyle="bold" />

                        </LinearLayout>
                    </HorizontalScrollView>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/upcommingMovies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choose a sitting position"
                android:textColor="#FF9800"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="-24dp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="293dp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="21dp">

